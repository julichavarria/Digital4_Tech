<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../partials/head') %>
        <!-- /////// CARGA CSS  PARTICULAR/////// -->
        <link rel="stylesheet" href="/css/stylesProfile.css">
</head>

<body>
    <%- include ('../partials/header') %>
        <main>


            <div class="contenedorPerfil">
                <div class="contenedorImg">
                    <img src=<%= destinationFolder + usuario.avatar %> >
                </div>


                <div class="contenedorDatos">
                    <h1>
                        <%= usuario.usuario %>
                    </h1>
                    <p> Nombre: <span>
                            <%= usuario.nombre %>
                        </span></p>
                    <p> Apellido: <span>
                            <%= usuario.apellido %>
                        </span></p>
                    <p> Email: <span>
                            <%= usuario.email %>
                        </span></p>

                        <a href="/users/editUser/<%= usuario.id %>">
                            <div class="botones">
                                <button class="btnSecundario" type="submit"><span> <i class="far fa-edit"></i> EDITAR INFO </span> </button>
                            </div>
                        </a>
                        <a href="/users/editPassword/<%= usuario.id %>">
                            <div class="botones">
                                <button class="btnSecundario" type="submit"><span> <i class="far fa-edit"></i> EDITAR PASSWORD </span> </button>
                            </div>
                        </a>
                        <form action="/users/logout" method="get">
                            <div class="botones">
                                <button class="btnPrincipal" type="submit"> CERRAR SESIÃ“N </button>
                            </div>
                        </form>
                </div>

            </div>

            <div class="contenedorBotones">
                
                
                <% if ( locals.isLogged=='loggedAdmin' ) { %>
                    <a href="/users/usersList">
                        <div class="botones">
                            <button class="btnSecundario" type="submit"><span><i class="far fa-eye"></i> VER TODOS LOS USUARIOS </span> </button>
                        </div>
                    </a>
                    <% } %>

                   
            </div>
        </main>
        <%- include ('../partials/footer') %>
</body>

</html>