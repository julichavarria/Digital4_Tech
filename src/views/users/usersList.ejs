<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ('../partials/head') %>
        <!-- /////// CARGA CSS  PARTICULAR/////// -->
        <link rel="stylesheet" href="../css/stylesUserList.css">
</head>

<body>
    <%- include ('../partials/header') %>
        <main>

            <section>
                <!--  INICIO DE DATOS DINAMICOS //////////////////    -->
                <% for (let i=0; i < usuarios.length; i++){ %>
                <article class="contenedorUsuario">
                    
                <div class="contenedorDataUsuario" > 
                    <img src="<%= destinationFolder + usuarios[i].avatar %>" alt="">
                    <div class="dataUsuario"><%= usuarios[i].nombre %> <%= usuarios[i].apellido %> <span class="userRol">(<%= usuarios[i].rol.nombre_rol %>)</span> </div>
                </div>
                    <div class="contenedorAccionesUsuarios">
                        <a href= "/users/userDetail/<%= usuarios[i].id %>" ><i class="far fa-eye"></i></a>
                        <a href= "/users/editUser/<%= usuarios[i].id %>" ><i class="far fa-edit"></i></a>
                        <a href= "/users/editPassword/<%= usuarios[i].id %>" ><i class="fas fa-key"></i></a>
                        <a href= "/users/confirmDelete/<%= usuarios[i].id %>" ><i class="fa-regular fa-trash-can"></i></a>
                        <!-- <form action="/users/editUser/<%= usuarios[i].id %>/deleteUser?_method=DELETE" method="POST" >
                            <button type="submit"><i class="fa-regular fa-trash-can"></i></button>
                        </form> -->
                    </div>
                   
                </article>   
                <% } %>
            </section>

        </main>
        <%- include ('../partials/footer') %>
</body>

</html>