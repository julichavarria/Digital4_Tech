                            <label><input type="radio" required="required" id="avatar" name="avatar" value="avatar13.jpg"
                                <% if (usersJS.avatar=="avatar13.jpg" ){%> checked <%}%>>
                                <img src="/img/avatars/avatar13.jpg">
                            </input></label>

                            <label><input type="radio" required="required" id="avatar" name="avatar" value="avatar14.jpg"
                                <% if (usersJS.avatar=="avatar14.jpg" ){%> checked <%}%>>
                                <img src="/img/avatars/avatar14.jpg">
                            </input></label>

                            <label><input type="radio" required="required" id="avatar" name="avatar" value="avatar15.jpg"
                                <% if (usersJS.avatar=="avatar15.jpg" ){%> checked <%}%>>
                                <img src="/img/avatars/avatar15.jpg">
                            </input></label>

                        </div>
                    </div>
                    <!-- HASTA ACA HAY QUE BORRAR SI NO QUIEREN DEJAR LOS RADIO BUTTON COMO IMAGEN -->

                    <div class="botones">
                        <button class="btnPrincipal" type="submit"> EDITAR </button>
                    </div>
                </form>
                <form action="/users/editUser/<%= usersJS.id %>/deleteUser?_method=DELETE" method="POST">
                    <div class="botones">
                        <button class="btnSecundario" type="submit"><span>BORRAR USUARIO</span> </button>
                    </div>
                </form>
            </div>


        </main>
        <%- include ('../partials/footer') %>
</body>

</html>